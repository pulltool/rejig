{
  "name": "Rejig",
  "description": "Sync a local unpacked Chrome extension with development files online.",
  "author": "Stuart P. Bentley",
  "manifest_version": 2,
  "version": "0.0.0",
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
  },
  "background": {
    "scripts": ["targz.js","background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "management",
    "developerPrivate"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "minimum_chrome_version": "31.0.1650.8",
}
